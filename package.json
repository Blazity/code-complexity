{
  "name": "code-complexity",
  "version": "2.1.3",
  "description": "Measure projects complexity based on files sloc and commit count.",
  "main": "src/index.ts",
  "bin": {
    "code-complexity": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/simonrenoult/code-complexity"
  },
  "bugs": {
    "url": "https://github.com/simonrenoult/code-complexity/issues"
  },
  "scripts": {
    "build": "tsc",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "eslint --ext .ts .",
    "prepare": "npm run build",
    "pretest": "npm run lint",
    "postversion": "git push --tags",
    "test": "NODE_ENV=test nyc mocha test/**/*.test.js"
  },
  "keywords": [
    "complexity",
    "sloc",
    "commit",
    "cli"
  ],
  "author": "Simon Renoult <simon.renoult@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.1.1",
    "node-sloc": "^0.1.12"
  },
  "devDependencies": {
    "@types/chai": "^4.2.10",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.0",
    "@types/proxyquire": "^1.3.28",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "proxyquire": "^2.1.3",
    "typescript": "^3.8.3"
  }
}
